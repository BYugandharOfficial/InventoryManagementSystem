@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">Total Products: @ViewBag.TotalProducts</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">Total Suppliers: @ViewBag.TotalSuppliers</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">Total Customers: @ViewBag.TotalCustomers</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">Total Sales: @ViewBag.TotalSales</div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">Total Stock: @ViewBag.TotalStock</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">Low Stock Alerts: @ViewBag.LowStock</div>
        </div>
    </div>

</div>
