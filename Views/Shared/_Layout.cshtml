<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Inventory Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyU6aIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/bootstrap.mini.css")
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        header {
            height: 60px;
            background-color: #007bff;
            color: white;
            padding: 15px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
        }

        .wrapper {
            display: flex;
            flex: 1;
            margin-top: 60px;
        }

        .sidebar {
            width: 220px;
            background-color: black;
            height: calc(100vh - 60px);
            position: fixed;
            top: 60px;
            left: 0;
        }

            .sidebar .nav-link {
                color: aliceblue;
                padding: 10px;
            }

                .sidebar .nav-link:hover {
                    background-color: brown;
                }

        .content {
            margin-left: 220px;
            padding: 20px;
            flex: 1;
        }

        footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px;
            width: 100%;
            margin-top: auto;
        }

        btn btn-denger {
            border-radius: 6px;
            background-color: red;
        }

        input.form-control {
            border-radius: 7px;
            padding: 6px;
            box-shadow: none;
            border: 1px solid #ccc;
            margin-bottom: 1rem;
        }

            input.form-control:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 5px rgba(0,123,255,.5);
            }

        select.form-control {
            border-radius: 7px;
            padding: 6px;
            box-shadow: none;
            border: 1px solid #ccc;
            font-size: 15px;
        }

            select.form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0,123,255,.5);
            }

        select.btn btn-primary {
            padding: 10px 20px;
            background-color: blue;
            border-radius: 6px;
            font-size: 16px;
        }
    </style>
</head>

<body>
    <header>

        <center><h4>Inventory Management System</h4></center>
       
    </header>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar">
            
               

                @if (Session["Username"] != null)
                {
                    <div class="text-start" style="color:aliceblue" align="right">
                     Current Logged in as:
                        (<span>@Session["Role"]</span>)
                    </div>
                }
            

            <ul class="nav flex-column">

                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Products")">Products</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Categories")">Categories</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Stocks")">Stocks</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Suppliers")">Suppliers</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Customer")">Customers</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Sales")">Sales</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Bill")">Billing</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "ReportToPDF")">Reports</a></li>
                @if (Session["Role"]?.ToString() == "Admin")
                {
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Register", "Accounts")">Admin</a></li>
                }
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Accounts")">Logout</a></li>

            </ul>
        </nav>

        <!-- Main Content -->
        <main class="content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>
    </div>
    <footer>
        <p>&copy; 2025 My Inventory Management System</p>
    </footer>
    @RenderSection("Scripts", required: false)
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>